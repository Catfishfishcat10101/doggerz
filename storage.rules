rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed()   { return request.auth != null; }
    function isOwner(uid) { return isAuthed() && request.auth.uid == uid; }

    // User-owned files live under /user/{uid}/...
    match /user/{uid}/{allPaths=**} {
      allow read:  if isOwner(uid);
      allow write: if isOwner(uid)
                   && request.resource.size < 5 * 1024 * 1024 // 5MB cap
                   && request.resource.contentType.matches('image/.*|application/octet-stream');
    }

    // Public assets (sprites, icons) in /public/** read-only
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
