// src/firebase.js
import { initializeApp, getApps, getApp } from "firebase/app";
import {
  getAuth,
  setPersistence,
  browserLocalPersistence,
  connectAuthEmulator,
  GoogleAuthProvider,
} from "firebase/auth";
import {
  getFirestore,
  connectFirestoreEmulator,
  initializeFirestore,
} from "firebase/firestore";

// ---- Config from Vite env ----
const cfg = {
  apiKey: import.meta.env.VITE_FB_API_KEY,
  authDomain: import.meta.env.VITE_FB_AUTH_DOMAIN,
  projectId: import.meta.env.VITE_FB_PROJECT_ID,
  storageBucket: import.meta.env.VITE_FB_STORAGE_BUCKET,
  messagingSenderId: import.meta.env.VITE_FB_MESSAGING_SENDER_ID,
  appId: import.meta.env.VITE_FB_APP_ID,
};

// Fail fast in dev if obviously broken
if (import.meta.env.DEV) {
  ["apiKey", "projectId"].forEach((k) => {
    if (!cfg[k]) console.error(`❌ Missing Firebase env: ${k}`);
  });
  // Redact secrets in logs
  console.info("[Firebase] cfg summary", {
    hasApiKey: !!cfg.apiKey,
    authDomain: cfg.authDomain,
    projectId: cfg.projectId,
  });
}

// Single app instance guard
const app = getApps().length ? getApp() : initializeApp(cfg);

// Some corporate/VPN setups block gRPC; force long polling to avoid “UNAVAILABLE” weirdness
initializeFirestore(app, { experimentalForceLongPolling: true, useFetchStreams: false });

// Core handles
export const auth = getAuth(app);
export const db = getFirestore(app);
export const googleProvider = new GoogleAuthProvider();

// Persist auth across tabs/reloads
setPersistence(auth, browserLocalPersistence).catch((e) => {
  console.warn("Auth persistence failed:", e?.code || e?.message || e);
});

// Emulator toggle (explicit > implicit)
export const isEmulator = String(import.meta.env.VITE_USE_FIREBASE_EMULATOR) === "1";

// Also allow fallback to emulator if someone forgot the env but is on localhost
const onLocalhost = typeof window !== "undefined" && /^(localhost|127\.0\.0\.1)$/.test(window.location.hostname);

if (isEmulator || (import.meta.env.DEV && onLocalhost && cfg.projectId === "demo-doggerz")) {
  console.warn("⚠️ Using Firebase emulators (auth:9099, firestore:8080)");
  connectAuthEmulator(auth, "http://127.0.0.1:9099", { disableWarnings: true });
  connectFirestoreEmulator(db, "127.0.0.1", 8080);
}
