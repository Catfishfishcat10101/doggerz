rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --------- helpers ---------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --------- per-user data ---------

    // User profile doc: /users/{uid}
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Dog save data: /users/{uid}/dog/...
    match /users/{userId}/dog/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // --------- leaderboards ---------

    // Public leaderboards (read-only from client)
    // Example: /leaderboards/global, /leaderboards/topWeekly, etc.
    match /leaderboards/{document=**} {
      // Any authenticated user can see leaderboard entries
      allow read: if isSignedIn();

      // Writes should be done from Cloud Functions using Admin SDK
      allow write: if false;
    }

    // --------- deny everything else ---------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
