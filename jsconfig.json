{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",
    "types",
    "capacitor.config.json*",
    "vite.config.*",
    "eslint.config.cjs",
    "tailwind.config.*",
    "postcss.config.*"
  ]
}
