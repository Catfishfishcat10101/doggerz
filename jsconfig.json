{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".com.doggerz.app",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client", "node"]
  },
  "include": ["src", "capacitor.config.json*", "vite.config.*", "eslint.config.cjs", "tailwind.config.*", "postcss.config.*"]
}
