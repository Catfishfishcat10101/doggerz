{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "checkJs": true,
    "noEmit": true,
    // Use ES module target that supports import.meta and Node-style resolution
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    // Keep helpful ambient types for editor but avoid auto-acquisition noise
    "types": ["vite/client", "node"]
  },

  // Prevent the TS server from trying to auto-install many @types packages
  "typeAcquisition": {
    "enable": false
  },

  "include": [
    "src/**/*",
    "vite.config.*",
    "tailwind.config.*",
    "postcss.config.*",
    "game",
    "server",
    "scripts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "public",
    "**/node_modules/*",
    "tmp.*",
    "audit-snapshots"
  ]
}
