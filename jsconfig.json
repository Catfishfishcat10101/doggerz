{
  "compilerOptions": {
    /* Modern React JSX transform */
    "jsx": "react-jsx",

    /* Path alias so "@/..." works in VS Code too */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* JS project with type checking */
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    /* Match Vite/ESM world */
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",

    /* Quality-of-life flags */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Vite + Node globals (import.meta, process.env, etc.) */
    "types": ["vite/client", "node"]
  },
  "include": ["src", "vite.config.*", "tailwind.config.*", "postcss.config.*"],
  "exclude": ["node_modules", "dist", "build"]
}
